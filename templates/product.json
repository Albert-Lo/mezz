{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "spacer_1": {
          "type": "spacer",
          "settings": {
            "height": 28
          }
        },
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "font_size": 24
          }
        },
        "spacer_2": {
          "type": "spacer",
          "settings": {
            "height": 16
          }
        },
        "title": {
          "type": "title"
        },
        "spacer_3": {
          "type": "spacer",
          "settings": {
            "height": 42
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.custom.short_description.value }}",
            "font_size": 20
          }
        },
        "spacer_4": {
          "type": "spacer",
          "settings": {
            "height": 82
          }
        },
        "price": {
          "type": "price"
        },
        "spacer_5": {
          "type": "spacer",
          "settings": {
            "height": 20
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "spacer_6": {
          "type": "spacer",
          "settings": {
            "height": 28
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "spacer_7": {
          "type": "spacer",
          "settings": {
            "height": 50
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        }
      },
      "block_order": [
        "spacer_1",
        "vendor",
        "spacer_2",
        "title",
        "spacer_3",
        "caption",
        "spacer_4",
        "price",
        "spacer_5",
        "variant_picker",
        "spacer_6",
        "quantity_selector",
        "spacer_7",
        "buy_buttons"
      ],
      "settings": {
        "enable_sticky_info": true,
        "gallery_layout": "stacked",
        "media_size": "large",
        "constrain_to_viewport": true,
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
